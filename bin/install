#!/bin/bash

# Remove existing Vim files
# cd ~
rm -rf .vim
# rm .vimrc

# Clone my Vim files
# git clone http://github.com/brymck/dotvim.git .vim
# ln -s .vim/vimrc .vimrc
# cd .vim

# Initialize and pull all submodules
# git submodule init
# git submodule update

# Add pathogen
# mkdir autoload
# cd autoload
# ln -s ../pathogen/autoload/pathogen.vim pathogen.vim

# Ask user whether to install the Ruby extras
while true
do
  echo -n "Do you wish to install the Ruby extras? (y/n) "
  stty -echo raw
  yn=$(dd bs=1 count=1 2>/dev/null)
  stty echo -raw
  echo $yn
  case $yn in
    [Yy]* )
      break
      ;;
    [Nn]* )
      exit
      ;;
    * )
      echo "Please answer yes or no."
      ;;
  esac
done

# Install Ruby extras
# cd ~/.vim
# bundle update

# Install some extensions I made for Ruby reflection
# git clone git://github.com/brymck/what_methods.git .what
# cd .what
# rake install
# cd -
# rm -rf .what

# Link up IRB
# cd ~
# rm .irbrc
# ln -s .vim/irbrc .irbrc
